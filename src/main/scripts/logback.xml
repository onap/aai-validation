<configuration>
	<property name="logDirectory" value="logs/" />

	<appender name="log" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${logDirectory}/application.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${logDirectory}/application.log.%d{yyyy-MM-dd}</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>%d %-5level %logger - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="HttpClient" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${logDirectory}/topic.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${logDirectory}/topic.log.%d{yyyy-MM-dd}</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>%d %-5level %logger - %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- Don't remove this logger name -->
	<logger name="com.att.eelf" level="INFO" additivity="false">
		<appender-ref ref="log"/>
	</logger>
	
	<logger name="com.att.nsa.apiClient.http.HttpClient" level="INFO" additivity="false">
		<appender-ref ref="HttpClient"/>
	</logger>
	
	<!-- DEBUG < INFO <  WARN < ERROR -->
	<root level="INFO">
		<appender-ref ref="log"/>
	</root>
</configuration>
